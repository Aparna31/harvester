#!/usr/bin/env ruby

require_relative '../config/initialize'

@google = Google::GATEWAY

# Update Google spreadsheet with info
@google[1,1] = "Harvest outstanding invoices"
@google[1,2] = Harvest.invoices_total
@google[2,1] = "QBO bank account balance"
@google[2,2] = Qbo.account_balance

if @google.save()
  puts "Google spreadsheet:"

  @google.rows.each do |row|
    puts row.join("\t")
  end
else
  puts "Unsuccessful"
end